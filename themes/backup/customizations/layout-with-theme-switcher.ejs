      console.log('ä¸»é¢˜åˆ‡æ¢å™¨å·²å­˜åœ¨');
      return;
    }
    
    console.log('å¼€å§‹åˆ›å»ºä¸»é¢˜åˆ‡æ¢å™¨');
    
    // åˆ›å»ºåˆ‡æ¢å™¨HTML
    const switcherHTML = `
      <div class="theme-switcher">
        <div class="theme-options">
          <button class="theme-btn" data-theme="light" title="æµ…è‰²æ¨¡å¼">
            <span class="theme-icon">â˜€ï¸</span>
            <span class="theme-name">æµ…è‰²</span>
          </button>
          <button class="theme-btn" data-theme="dark" title="æ·±è‰²æ¨¡å¼">
            <span class="theme-icon">ğŸŒ™</span>
            <span class="theme-name">æ·±è‰²</span>
          </button>
          <button class="theme-btn" data-theme="green" title="ç»¿è‰²ä¸»é¢˜">
            <span class="theme-icon">ğŸŒ¿</span>
